<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="207dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="8dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/actor_img_view"
        android:layout_width="49dp"
        android:layout_height="68dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/actor_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Владимир Онохов"
        android:textColor="@color/light_black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/actor_img_view"
        app:layout_constraintTop_toTopOf="@id/actor_img_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actor_film_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Лешка"
        android:textColor="#FF838390"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/actor_name"
        app:layout_constraintTop_toBottomOf="@id/actor_name" />

</androidx.constraintlayout.widget.ConstraintLayout>